{
  "name": "dashboard",
  "version": "1.0.0",
  "description": "Mon premier dashboard d'administration",
  "main": "index.js",
  "watch": {
    "css-build": {
      "patterns": [
        "src/scss/"
      ],
      "extensions": "scss",
      "quiet": false
    },
    "js-build": {
      "patterns": [
        "src/js/"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "scripts": {
    "css-build": "node-sass --output-style=compressed --source-map=dist/css/styles.css.map src/scss/styles.scss dist/css/styles.min.css",
    "js-build": "copyfiles -u 1 src/js/*.js dist/",
    "css-watch": "npm-watch css-build",
    "js-watch": "npm-watch js-build",
    "build": "concurrently 'npm:*-build'",
    "start": "concurrently 'npm:*-watch'"
  },
  "author": "Thibault Tregret",
  "license": "KRST",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.4.0",
    "bootstrap": "^4.1.3",
    "bootstrap-toggle": "^2.2.2",
    "concurrently": "^4.0.1",
    "copyfiles": "^2.1.0",
    "datatables.net-bs4": "^1.10.19",
    "jquery": "^3.3.1",
    "node-sass": "^4.9.3",
    "npm-watch": "^0.4.0",
    "popper.js": "^1.14.4",
    "select2": "^4.0.6"
  },
  "dependencies": {}
}
